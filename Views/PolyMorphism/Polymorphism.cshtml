@model OOP.Models.PolyMorphism.Lead;

@{
    ViewData["Title"] = "Polymorphism Page";
}

<div class="text-center">
    @using (Html.BeginForm("PolyMorphism", "PolyMorphism", FormMethod.Post))
    {
        @Html.ValidationMessage("Customer")
        <table cellpadding="0" cellspacing="0">
            <tr rowspan="2">
                <th colspan="2" style="text-align: left;">Customer</th>
            </tr> 
            <tr>
                <td>Type: </td>
                <td style="text-align: left;">
                    @Html.DropDownListFor(m => m.Type, new List<SelectListItem>
                   { new SelectListItem{Text="Normal", Value="1"},
                     new SelectListItem{Text="Lead", Value="2"}}, 
                     "Please select")
                </td>
            </tr>
            <tr>
                <td>FirstName: </td>
                <td>
                    @Html.TextBoxFor(m => m.FirstName)
                </td>
            </tr>
            <tr>
                <td>Board ID: </td>
                <td>
                     @Html.TextBoxFor(m => m.BoardId)
                </td>
            </tr>
            <tr>
                <td></td>
                <td><input type="submit" value="Submit"/></td>
            </tr>
        </table>
    }
</div>
